{
  "info": {
    "name": "Staysia Express API",
    "description": "Complete REST API for Staysia property rental platform",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/user/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"phone\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/user/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "profile"]
            }
          }
        },
        {
          "name": "Become Host",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/user/become-host",
              "host": ["{{base_url}}"],
              "path": ["api", "user", "become-host"]
            }
          }
        }
      ]
    },
    {
      "name": "Properties",
      "item": [
        {
          "name": "List Properties",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/properties?limit=20&offset=0&sortBy=price",
              "host": ["{{base_url}}"],
              "path": ["api", "properties"],
              "query": [
                {"key": "limit", "value": "20"},
                {"key": "offset", "value": "0"},
                {"key": "sortBy", "value": "price"},
                {"key": "city", "value": "Jakarta", "disabled": true},
                {"key": "type", "value": "Villa", "disabled": true}
              ]
            }
          }
        },
        {
          "name": "Get Property",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/properties/1",
              "host": ["{{base_url}}"],
              "path": ["api", "properties", "1"]
            }
          }
        },
        {
          "name": "Pricing Calculation",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/properties/1/pricing-calculation?startDate=2025-01-01&endDate=2025-01-10",
              "host": ["{{base_url}}"],
              "path": ["api", "properties", "1", "pricing-calculation"],
              "query": [
                {"key": "startDate", "value": "2025-01-01"},
                {"key": "endDate", "value": "2025-01-10"}
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "List Reviews",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/reviews?propertyId=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "reviews"],
              "query": [
                {"key": "propertyId", "value": "1"},
                {"key": "limit", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Create Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"propertyId\": 1,\n  \"userName\": \"John Doe\",\n  \"rating\": 4.5,\n  \"comment\": \"Great property with excellent amenities!\",\n  \"cleanliness\": 5,\n  \"accuracy\": 4.5,\n  \"location\": 4,\n  \"value\": 4.5\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/reviews",
              "host": ["{{base_url}}"],
              "path": ["api", "reviews"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ]
}
